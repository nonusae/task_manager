$("#tasks").html("<%= j (render @tasks) %>");

if ( "<%=@add_button%>" == "Add") {
	if($("input#search_button").length > 0 ) { 
		$("#button_span").children("input#search_button").remove();
		$("#button_span").append("<%= j (render 'tasks/nav_create_new_button') %>") ; 
	} else {
		$("a#add_new_button").remove()
		$("#button_span").append("<%= j (render 'tasks/nav_create_new_button') %>")  
		// we have to render the button because we need to update @new_description value that pass to element
		// if we not rerender the value will stuck at the first value that trigger this function
	}

} else if ( ( "<%=@add_button%>" == "Search") ){

	if($("a#add_new_button").length > 0 ) { 
		$("#button_span").children("a#add_new_button").remove();
		$("#button_span").append("<%= j (render 'tasks/search_button') %>") ; 
	} else
	{
		$("input#search_button").remove()
		$("#button_span").append("<%= j (render 'tasks/search_button') %>")  		
	}

}
